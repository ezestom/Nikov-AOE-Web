<style>
	.warrior {
		width: 100%;
		height: 100vh;
		object-fit: cover;
		background-image: radial-gradient(
				circle at center,
				rgba(0, 0, 0, 0.8) 50%,
				transparent 100%
			),
			radial-gradient(
				circle at center,
				transparent 0%,
				rgba(0, 0, 0, 0.8) 50%
			),
			linear-gradient(to left, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0)),
			linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
		mask: radial-gradient(circle at left, white 15%, transparent 85%);
	}
	.btn {
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 7px;
		width: 160px;
		transition: filter 0.3s cubic-bezier(0.22, 1, 0.36, 1);
		background-color: #23262d;
		color: white;
		padding: 0.5rem 1rem;
	}
	.btn:hover {
		filter: brightness(1.2) drop-shadow(0 0 0.1rem #45d3e0);
		cursor: pointer;
	}
</style>
