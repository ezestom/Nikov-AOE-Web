---
import { Image } from "astro:assets";
import nicov from "../img/nicov-title.png";
import wallpaper from "../img/nikov-redbull.jpg";
import Back from "./Back.astro";
import Switch from "./Switch.astro";
import twitter from "../icons/PajamasTwitter.png";
import instagram from "../icons/instagram.png";
import facebook from "../icons/IconoirFacebook.png";
import email from "../icons/IconamoonEmailLight.png";

interface Astro {
	props: {
		titleEsp: string;
		bodyEsp: string;
		icon?: string;
	};
}

const { titleEsp, bodyEsp, icon } = Astro.props;
---

<section class="flex items-center justify-center">
	<a href="/" class="nicov-container">
		<Image src={nicov} alt="nicov" class="nicov" />
	</a>

	<article
		class="grid grid-cols-6 grid-rows-5 gap-3 h-[90vh] w-[1100px] z-20">
		<div class="col-span-4 row-span-1">
			<h1
				class="text-4xl text-center flex items-center justify-center h-full w-full tracking-widest uppercase font-semibold">
				<span
					class="text-8xl h-full text-gray-700 font-normal opacity-40 grid content-center"
					>{icon}
				</span>{titleEsp}
			</h1>
		</div>
		<div
			class="relative col-span-1 row-span-1 flex items-center justify-center">
			<div class="w-full h-full rotate-180">
				<Back />
			</div>
		</div>
		<div class="col-span-1 row-span-1 flex items-center justify-center">
			<aside class="grid grid-cols-2 grid-rows-2 gap-2 w-2/3 h-2/3 p-1">
				<a
					href="https://twitter.com/nicovaoe"
					target="_blank"
					class="icon-container flex justify-center items-center">
					<Image
						src={twitter}
						alt="twitter"
						class="icon-media object-contain"
					/>
				</a>
				<a
					href="https://www.instagram.com/nicovaoe/"
					target="_blank"
					class="icon-container flex justify-center items-center">
					<Image
						src={instagram}
						alt="x"
						class="icon-media object-contain"
					/>
				</a>
				<a
					href="https://www.facebook.com/nicovaoe/"
					target="_blank"
					class="icon-container flex justify-center items-center">
					<Image
						src={facebook}
						alt="x"
						class="icon-media object-contain"
					/>
				</a>
				<a
					href="mailto:ezequielstom@gmail.com"
					target="_blank"
					class="icon-container flex justify-center items-center">
					<Image
						src={email}
						alt="x"
						class="icon-media object-contain"
					/>
				</a>
			</aside>
		</div>
		<div class="col-span-2 row-span-4 rounded-lg">
			<Image
				transition:persist
				class="redbull w-full h-full object-cover b order-dotted border-2 border-gray-700 rounded-lg"
				src={wallpaper}
				alt="wallpaper-redbull-nicov"
			/>
		</div>

		<div
			class="col-span-4 row-span-4 flex items-start overflow-auto justify-center p-5 text-balance z-10">
			<p class="text-xl text-start text-balance">
				{bodyEsp}
			</p>
		</div>
	</article>

	<Switch transition:persist />
</section>

<style>
	p {
		/* font-family: "Grenze Gotisch", serif;
		font-size: 2rem; */
		/* color: var(--tangerine); */

		&::first-letter {
			initial-letter: 3 2;
			font-weight: 800;
			padding-right: 1rem;
			background: linear-gradient(
				to right,
				var(--razzmatazz),
				var(--goldenyellow)
			);
			color: transparent;
			-webkit-background-clip: text;
		}
	}

	section {
		height: 100vh;
		width: 100vw;
		color: rgb(207 208 209);
	}
	article > div {
		background-color: #23262d;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.icon-container {
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		background-color: rgba(255, 255, 255, 0.1);

		border-radius: 8px;
	}
	.icon-media {
	}

	.icon-container:hover {
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.3);
	}
	.redbull {
		view-transition-name: redbull;
	}
	.nicov {
		width: 200px;
		position: absolute;
		z-index: 1;
		top: 0.25rem;
		right: 0.25rem;
		transition: all 0.5s ease-in-out;
		view-transition-name: nicov;
		filter: drop-shadow(0 0 0.05em crimson) brightness(1.2);
	}

	.nicov:hover {
		filter: drop-shadow(0 0 0.3em crimson) brightness(1.5);
	}

	article > div {
		--sb-track-color: #303030;
		--sb-thumb-color: #23262d;
		--sb-size: 10px;

		scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
	}

	article > div::-webkit-scrollbar {
		width: var(--sb-size);
	}

	article > div::-webkit-scrollbar-track {
		background: var(--sb-track-color);
		border-radius: 10px;
	}

	article > div::-webkit-scrollbar-thumb {
		background: var(--sb-thumb-color);
		border-radius: 10px;
	}
	@media (width < 950px) {
		.nicov {
			width: 250px;
		}
		article {
			width: 100vw;
			grid-template-columns: 1fr;
			grid-template-rows: auto;
			padding: 0 2%;
			position: absolute;
			top: 10rem;
			overflow-y: scroll;
			height: auto;
		}

		div:nth-child(2) {
			grid-column: 1/2;
			grid-row: 3/6;
		}
		div:nth-child(3) {
			grid-column: 1/2;
			grid-row: 2/3;
		}
		div:nth-child(4) {
			max-height: 400px;
			width: auto;
			padding: 0;
		}
		div:nth-child(5) {
			height: 400px;
			margin-bottom: 1rem;
		}
		div {
			padding: 3%;
			max-height: 450px;
		}
	}
</style>
